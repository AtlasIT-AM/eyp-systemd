<% if defined?(@description) -%>
[Unit]
Description = <%= @description %>

<% end -%>
[Service]
ExecStart=<%= @execstart %>
<% if defined?(@execstop) -%>
ExecStop=<%= @execstop %>
<% end -%>
Restart=<%= @restart %>
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=<%= @servicename %>
User=<%= @user %>
Group=<%= @group %>
<% if @forking -%>
Type=forking
<% end -%>
<% if defined?(@pid_file) -%>
PIDFile=<%= @pid_file %>
<% end -%>

[Install]
WantedBy=multi-user.target
